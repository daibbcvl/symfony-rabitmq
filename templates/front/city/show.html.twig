{% extends 'base.html.twig' %}

{% block meta %}

    <meta name="dc.language" content="VN">
    <meta name="dc.source" content="https://laptravels.com">
    <meta name="dc.creator" content="LAPTravels" />
    <meta name="distribution" content="Global" />
    <meta name="revisit" content="1 days" />
    <meta name="geo.placename" content="Vietnam" />
    <meta name="geo.region" content="Ho Chi Minh" />
    <meta name="generator" content="https://laptravels.com" />

    <link rel="canonical" href="https://laptravels.com/{{city.slug}}" />
    <link rel="publisher" href="https://laptravels.com"/>
    <meta property="og:locale" content="vi_VN" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="" />
    <meta property="og:description" content="" />
    <meta property="og:url" content="{{ pageURL }}" />
    <meta property="og:site_name" content="LAPTravels" />
    <meta property="article:publisher" content="{{ fbPage }}" />
    <meta property="article:section" content="" />
    <meta property="article:published_time" content="" />
    <meta property="article:modified_time" content="" />
    <meta property="og:updated_time" content="" />
    <meta property="og:image" content="{{ city.thumbUrl }}" />
    <meta property="og:image:secure_url" content="{{ pageURL }}" />
    <meta property="og:image:width" content="1430" />
    <meta property="og:image:height" content="955" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:description" content="" />
    <meta name="twitter:title" content="" />
    <meta name="twitter:image" content="{{ city.thumbUrl }}" />
    <meta property="sailthru.tags" content=""/>
    <meta name="sailthru.image.full" content="{{ city.thumbUrl }}" />

    <title>LAP Travels - {{ title }}</title>

{% endblock %}

{% block content %}
    <h2 class="mb-3">{{ city.name }}</h2>
    {{ city.content | raw }}
    {% if posts|length > 0 %}
        <div class="about-author d-flex p-5 bg-light">
            <div class="desc align-self-md-center">
                <h3>Bài viết liên quan đến {{ city.name }}:</h3>
                <ul>
                    {% for post in posts %}
                    <li><a href="{{ path('blog_details', {slug:post.slug})}}">{{ post.title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
