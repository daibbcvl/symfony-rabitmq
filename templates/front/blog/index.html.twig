{% extends 'base.html.twig' %}

{% block content %}
        {% for post in posts %}
            <h2 class="mb-3"><a href="{{ path('blog_details', {slug:post.slug}) }}">{{ post.title }}</a></h2>
            {{ post.summary | raw}}
            <div class="tag-widget post-tag-container mb-5 mt-5">
                <div class="tagcloud">
                    {% for tag in post.tags %}
                    <a href="#" class="tag-cloud-link">{{ tag.name }}</a>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
