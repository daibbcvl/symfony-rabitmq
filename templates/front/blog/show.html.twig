{% extends 'base.html.twig' %}

{% block content %}


        <h2 class="mb-3">{{ post.title }}</h2>
        {{ post.content | raw}}
        <div class="tag-widget post-tag-container mb-5 mt-5">
            <div class="tagcloud">
                {% for tag in post.tags %}
                <a href="#" class="tag-cloud-link">{{ tag.name }}</a>
                {% endfor %}
            </div>
        </div>

        <div class="about-author d-flex p-5 bg-light">
            <div class="bio align-self-md-center mr-5">
                <img src="{{ asset("/app/images/person_1.jpg")}}" alt="Image placeholder" class="img-fluid mb-4">
            </div>
            <div class="desc align-self-md-center">
                <h3>LAP Travels</h3>
                <p>Obsessed with exploring the world, meeting new people (+ goats) and getting as lost as possible with my camera. I was on the road for 1467 days between 2014 – 2018, taking a chance on changing my career from restaurants to capturing the world and somehow it all worked out</p>
            </div>
        </div>

        <div class="pt-5 mt-5">
            {% if comments|length %}
            <h3 class="mb-5">{{ comments|length }} Bình luận:</h3>
            <ul class="comment-list">
                {% for comment in comments %}
                <li class="comment">
                    <div class="comment-body">
                        <h3>{{ comment.name }}</h3>
                        <div class="meta">{{ comment.createdAt|date("F jS \\a\\t g:ia") }}</div>
                        <p>{{ comment.content }}</p>
                    </div>
                </li>
                {% endfor %}
            </ul>
            {% endif %}
            <!-- END comment-list -->

            <div class="comment-form-wrap pt-5" id="commentForm">
                <h3 class="mb-5">Thêm nhận xét</h3>
                {{ form_start(form, {'attr': { 'class': 'p-5 bg-light'}}) }}

                {% if app.user is empty %}
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>
                {% else %}
                    <div class="form-group">
                        <label for="name">Chào {{ app.user }}!</label>
                    </div>
                {% endif %}
                <div class="form-group">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content,{ 'attr': {'cols': 30, 'rows': 10 } }) }}
                </div>
                <div class="form-group">
                    <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
                </div>

                {{ form_end(form) }}
            </div>
        </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
