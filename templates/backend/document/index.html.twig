{% extends 'admin.html.twig' %}

{#{% form_theme form with 'bootstrap_4_layout.html.twig' only %}#}

{% set breadcrumbs = [{text: 'Documents'}, {text: 'List all documents'}] %}
{% set quick_actions = [{icon: 'flaticon-list', text: 'List all documents'}, {icon: 'flaticon-add', url: path('document_create'), text: 'Create a document'}] %}

{% block title %}List all destinations{% endblock %}
{% block subheader_title %}List all destinations{% endblock %}
{% block content %}
    <div class="m-content">
        <div class="m-portlet m-portlet--full-height m-portlet--tabs m--padding-30">
            <div class="table-responsive-lg m-datatable m-datatable--default">
                <table class="table table-bordered table-hover table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">title</th>
                        <th scope="col">description</th>
                        <th scope="col">url</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in pager.currentPageResults %}
                        <tr class="row-clickable" data-href="{{ path('destination_edit', {id: item.id}) }}" title="{{ path('destination_edit', {id: item.id}) }}">
                            <td>{{ item.title }}</td>
                            <td>{{ item.description }}</td>
                            <td>{{ item.url }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% include 'pager.html.twig' with {pager: pager} %}
            </div>
        </div>
    </div>
{% endblock %}
