{% extends 'admin.html.twig' %}

{% set breadcrumbs = [{url: path('page_index'), text: 'Post'}, {text: 'Edit'}] %}
{% set quick_actions = [{icon: 'flaticon-list', url: path('page_index'), text: 'List all pages'}, {icon: 'flaticon-add', url: path('page_create'), text: 'Create'}] %}

{% block title %}Edit page{% endblock %}
{% block subheader_title %}Edit a page{% endblock %}
{% block quick_actions_items %}
    <li class="m-nav__separator m-nav__separator--fit"></li>
    <li class="m-nav__item">
        <form action="{{ path('page_edit', {id: app.request.get('id')}) }}" method="post" class="m-nav__item">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-link m-btn m-btn--icon m-nav__link confirm-action" type="submit">
                <i class="m-nav__link-icon flaticon-delete text-danger"></i>
                <span class="m-nav__link-text text-danger text-left m--padding-left-15">Delete</span>
            </button>
        </form>
    </li>
{% endblock %}

{% block content %}
    <div class="m-content">
        <div class="m-portlet m-portlet--full-height m-portlet--tabs m--padding-30">
            <div class="row">
                <div class="col-lg-10 col-xl-10">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="form-group row">
                        <div class="col-sm-9 offset-sm-3">
                            <button class="btn btn-primary m-btn m-btn--icon" type="submit">
                                <i class="la la-save"></i>
                                Update
                            </button>
                            <button class="btn btn-outline-primary m-btn m-btn--icon" type="submit"
                                    name="redirect_url" value="{{ path('page_index') }}">
                                <i class="flaticon-list"></i>
                                Update & back to list
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
