{% extends 'admin.html.twig' %}

{% set breadcrumbs = [{url: path('comment_index'), text: 'Comment'}, {text: 'Edit'}] %}

{% block title %}Edit Sector{% endblock %}
{% block subheader_title %}Edit a post{% endblock %}

{% block content %}
    <div class="m-content">
        <div class="m-portlet m-portlet--full-height m-portlet--tabs m--padding-30">
            <div class="row">
                <div class="col-lg-10 col-xl-10">

                    {{ form_start(form) }}
                    <div class="row">
                        <label class="col-form-label col-sm-3 required" for="post_title">Name</label>
                        <div class="col-sm-9">
                            {{ comment.name }}
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-form-label col-sm-3 required" for="post_title">Email</label>
                        <div class="col-sm-9">
                            {{ comment.email }}
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-form-label col-sm-3 required" for="post_title">Message</label>
                        <div class="col-sm-9">
                            {{ comment.content }}
                            <br/>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-form-label col-sm-3 required" for="post_title">Comment date</label>
                        <div class="col-sm-9">
                            {{ comment.createdAt|date("Y-m-d H:s:i") }}
                        </div>
                    </div>
                    {{ form_row(form.approved) }}
                    {{ form_widget(form) }}
                    <div class="form-group row">
                        <div class="col-sm-9 offset-sm-3">
                            <button class="btn btn-primary m-btn m-btn--icon" type="submit">
                                <i class="la la-save"></i>
                                Update
                            </button>
                            <button class="btn btn-outline-primary m-btn m-btn--icon" type="submit"
                                    name="redirect_url" value="{{ path('comment_index') }}">
                                <i class="flaticon-list"></i>
                                Update & back to list
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
